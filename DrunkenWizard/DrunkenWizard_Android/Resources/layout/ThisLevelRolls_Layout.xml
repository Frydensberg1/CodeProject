
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id = "@+id/linearLevelRoll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background = "@android:color/transparent">

     
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
    android:text = "Rolling Spells"
    android:textColor = "@android:color/white"
    android:gravity = "center"
    android:textSize = "20sp"
    android:background = "#1F2020"/>

        

    <android.support.v7.widget.CardView
        android:id = "@+id/cWLevelRoll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        android:layout_gravity = "center"
        app:cardBackgroundColor = "@android:color/holo_blue_dark">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:orientation = "vertical"
             android:layout_marginRight = "5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel1Roll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 1:"   
                android:textStyle="bold"    
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

                <TextView
                    android:id = "@+id/txtLevel1Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel1Roll1"
                    android:text = "Så skal dette ske huhuhuhuhiuhuigu"
                    android:textColor = "@color/my_black"
                    android:textStyle="bold"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"/>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel2Roll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 2:"
                android:visibility="gone"    
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

                <TextView
                    android:id = "@+id/txtLevel2Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel2Roll2"
                    android:text = "Så skal dette ske"
                    android:visibility="gone"
                    android:textColor = "@color/my_black"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"/>

                </RelativeLayout>


            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel3Roll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 3:"               
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"    
                />

                <TextView
                      android:id = "@+id/txtLevel3Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel3Roll3"
                    android:text = "Så skal dette ske"
                    android:textColor = "@color/my_black"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"
                 android:visibility="gone"/>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel4Roll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 4:"               
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />

                <TextView
                      android:id = "@+id/txtLevel4Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel4Roll4"
                    android:text = "Så skal dette ske"
                    android:textColor = "@color/my_black"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                </RelativeLayout>



             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel5Roll5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 4:"               
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />

                <TextView
                      android:id = "@+id/txtLevel5Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel5Roll5"
                    android:text = "Så skal dette ske"
                    android:textColor = "@color/my_black"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                        
            <TextView
                android:id="@+id/txtLevel6Roll6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "@color/my_black"    
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:text = "Rolling 6:"               
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" 
                />

                <TextView
                    android:id = "@+id/txtLevel6Effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf = "@+id/txtLevel6Roll6"
                    android:text = "Så skal dette ske"
                    android:textColor = "@color/my_black"
                    android:textStyle="bold"
                    android:layout_marginTop = "5dp"
                    android:layout_marginBottom="5dp"/>

                </RelativeLayout>
                                
            

    
    
    
    </LinearLayout>
    
    </android.support.v7.widget.CardView>

</LinearLayout>