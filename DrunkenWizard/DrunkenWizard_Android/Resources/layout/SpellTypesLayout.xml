
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background = "#131212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
          android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background = "#66423f3f"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Multiple"
            android:text="Rules"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="20sp"
            android:background = "@android:color/transparent"/>
        <TextView
            android:id="@+id/txtMultipleMeaning"
            android:text="Rules"
            android:textAlignment="center"
            android:layout_below="@+id/Multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="18sp"
            android:background = "@android:color/transparent"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background = "#66423f3f"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Reaction"
            android:text="Rules"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="20sp"
            android:background = "@android:color/transparent"/>
        <TextView
            android:id="@+id/txtReactionMeaning"
            android:text="Rules"
            android:layout_below="@+id/Reaction"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="18sp"
            android:background = "@android:color/transparent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background = "#66423f3f"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Passive"
            android:text="Rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor ="@color/my_white"
            android:textSize="20sp"
            android:background = "@android:color/transparent"/>
        <TextView
            android:id="@+id/txtPassiveMeaning"
            android:text="Rules"
            android:layout_below="@+id/Passive"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="18sp"
            android:background = "@android:color/transparent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background = "#66423f3f"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/First"
            android:text="Rules"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="20sp"
            android:background = "@android:color/transparent"/>
        <TextView
            android:id="@+id/txtFirstMeaning"
            android:text="Rules"
            android:layout_below="@+id/First"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor ="@color/my_white"
            android:textSize="18sp"
              android:layout_marginBottom="10dp"
            android:background = "@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>