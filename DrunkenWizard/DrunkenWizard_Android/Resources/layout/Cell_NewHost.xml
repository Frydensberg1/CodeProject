<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rltHots"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
		android:layout_width="wrap_content"
         android:layout_height="wrap_content"
		android:text ="TheWizard1337"
		android:id ="@+id/txtNamePlayerNewHost"		
		android:textSize ="19sp"
		android:textColor ="@color/my_white"
        android:maxWidth="140dp" 
        android:lines="2"
        android:ellipsize="end"    
		android:layout_marginTop ="10dp"
        android:layout_marginLeft ="5dp"
            android:gravity = "center_vertical"
				
		/>


		<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_imageNewHost"
    android:layout_width="66dp"
    android:layout_height="66dp"
	android:layout_centerHorizontal ="true"
    app:civ_border_width="2dp"
    app:civ_border_color="#FF000000"/>

	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Level:"
            android:layout_marginTop ="10dp"
               android:layout_alignBaseline = "@+id/txtNamePlayerNewHost"
        android:textSize ="19sp"
            android:layout_toLeftOf ="@+id/newhostlevel"
		android:textColor ="@color/my_white"/>
		
		<TextView
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:id ="@+id/newhostlevel"
		android:text ="10"
		android:textSize ="19sp"
		android:textColor ="@color/my_white"
		android:layout_marginTop ="10dp"
			android:layout_marginRight ="5dp"
            android:layout_marginLeft ="10dp"
			android:layout_alignParentRight = "true"
            android:layout_alignBaseline = "@+id/txtNamePlayerNewHost"	
              


		/>
    
    </RelativeLayout>

</LinearLayout>
